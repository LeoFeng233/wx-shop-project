/* components/index/home/home.wxss */
.home-page {
    background: #eee;
    width: 100%;
    height: 100%;
    /*position: relative;*/
}

.goods-list-layout {
    position: absolute;
    left: 0;
    width: 100%;
    background: transparent;

}

.fixed-cate-tab {
    position: fixed;
    top: 0;
    left: 0;
    background: #eee;
}

.home-page-top-bar {
    position: absolute;
    top: 0;
    left: 0;
    z-index: 10;
    width: 100%;
}

#recycleId {
    background: #eee;
    overflow: hidden;
    /*height: 100%;*/
}

.goods-list {
    display: flex;
    flex-wrap: wrap;
    padding: 0 20rpx;
    justify-content: space-between;
}

.goods-item {
    width: 348rpx;
    height: 520rpx;
    margin-top: 20rpx;
    box-sizing: border-box;
}

.goods-item-content {
    width: 100%;
    height: 100%;
    background: #fff;
    border-radius: 10rpx;
    overflow: hidden;
}
