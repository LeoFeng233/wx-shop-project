/* components/index/mine/mine.wxss */
@import "../../../style//iconfont.wxss";

/*****************  用户账号样式 *********************/
.user{
  width: 88%;
  height: 86px;
  margin: 0 auto;
  box-sizing: border-box;
  border-radius: 8px;
  background-color: #FA8A8A;
  display: flex;
  justify-content: start;
  padding-left: 24px;
  align-items: center;
}

.user image{
  width: 60px;
  height: 60px;
  border-radius: 50%;
  margin-right: 10px;
}

.user text{
  font-size: 16px;
  color: #ffffff;
}

/*****************  订单情况样式 *********************/
.order{
  width: 92%;
  height: 100px;
  margin: 0 auto;
  border-radius: 10px;
  background-color: #ffffff;
  display: flex;
  justify-content: space-around;
  align-items: center;
}

.ord{
  display: flex;
  flex-direction: column;
  align-items: center;
}

.ord .iconfont{
  font-size: 28px;
  color: #333333;
}

.ord .txt{
  font-size: 12px;
  color: #999999;
  padding-top: 6px;
}

/*****************  功能栏样式 *********************/
.unified{
  width: 92%;
  height: 46px;
  border-radius: 8px;
  margin: 12px auto;
  box-sizing: border-box;
  background-color: #ffffff;
  display: flex;
  padding: 0 12px;
  justify-content: space-between;
  align-items: center;
  font-size: 14px;
}

.unified .iconfont{
  font-size: 14px;
  color: #666666;
}
