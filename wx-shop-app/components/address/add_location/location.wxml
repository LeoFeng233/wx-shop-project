<!--components/address/add_location/location.wxml-->
<view class="location">
  <view>
    <label>姓名</label>
    <input type="text" placeholder="请输入收货人姓名"   placeholder-class="placeholder" maxlength="40" value="{{data.name}}"/>
  </view>
  <view>
    <label>电话</label>
    <input type="number" placeholder="请输入收货人手机号" placeholder-class="placeholder" maxlength="11" value="{{tel}}" bindtap="changeAction"/>
  </view>
  <view>
    <label>地区</label>
    <picker class="place" mode="region" bindchange="binRegionChange" value="{{data.region}}">
      <input type="text" placeholder="选择省/市/区" placeholder-class="placeholder" value="{{data.region[0]}}，{{data.region[1]}}，{{data.region[2]}}" maxlength="44"/>
    </picker>
    <text class="iconfont icon-xiangyou"></text>
  </view>
  <view>
    <label>详细地址</label>
    <input type="text" placeholder="街道门牌、楼层房间号信息" placeholder-class="placeholder" maxlength="40"/>
  </view>
  <view>
    <label>邮政编码</label>
    <input type="number" placeholder="邮政编码" placeholder-class="placeholder" maxlength="6"/>
  </view>
</view>

<view class="defalut_address">
    <view class="defalut_text">设为默认地址</view>
    <view>
      <switch checked="{{switchChecked}}" bindchange="switchChange"/>
    </view>
</view>

<view class="submit" bindtap="btnAction">保存</view>

